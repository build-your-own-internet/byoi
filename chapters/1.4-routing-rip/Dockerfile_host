FROM ubuntu

RUN apt-get update && apt-get install -y iproute2 \
    tcpdump \
    iputils-ping \
    net-tools \
    bind9-utils \
    dnsutils \
    vim \
    inetutils-traceroute \
    mtr \
    iptables \
    nano \
    busybox \
    curl \
    links 

RUN apt-get install -y procps

COPY ./init/host-start-up.sh /host-start-up.sh
RUN mkdir -p /etc/vim
COPY ./init/vimrc /etc/vim/vimrc.local

CMD ["/host-start-up.sh"]
